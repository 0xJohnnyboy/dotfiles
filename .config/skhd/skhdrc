# Focus spaces 
ctrl - p: yabai -m space --focus prev
ctrl - n: yabai -m space --focus next
ctrl - 1: yabai -m space --focus 1
ctrl - 2: yabai -m space --focus 2
ctrl - 3: yabai -m space --focus 3
ctrl - 4: yabai -m space --focus 4

# Focus display
meh - 2: yabai -m display --focus 2
meh - 1: yabai -m display --focus 1
meh - p: yabai -m display --focus prev
meh - n: yabai -m display --focus next

# Resize window
meh - l: yabai -m window --resize left:20:0 || yabai -m window --resize right:20:0
meh - h: yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0
alt - b: yabai -m space --balance

# Focus window
alt - f : yabai -m window --toggle zoom-fullscreen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:2:2

alt - p : yabai -m window --focus prev
alt - n : yabai -m window --focus next
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north 
alt - l : yabai -m window --focus east

# Swap window
alt + shift - r : yabai -m space --rotate 90

alt + shift - p : yabai -m window --swap prev
alt + shift - n : yabai -m window --swap next
alt + shift - h : yabai -m window --swap west
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - l : yabai -m window --swap east

# Warp window
alt + ctrl - p : yabai -m window --warp prev
alt + ctrl - n : yabai -m window --warp next
alt + ctrl - h : yabai -m window --warp west
alt + ctrl - j : yabai -m window --warp south
alt + ctrl - k : yabai -m window --warp north
alt + ctrl - l : yabai -m window --warp east

# Move window to space
ctrl + shift - p : yabai -m window --space prev
ctrl + shift - n : yabai -m window --space next
ctrl + shift - h : yabai -m window --space west
ctrl + shift - j : yabai -m window --space south
ctrl + shift - k : yabai -m window --space north
ctrl + shift - l : yabai -m window --space east
